@{
    ViewData["Title"] = "表单提交测试";
}
<!DOCTYPE html>
<html>
<head>
    <title>表单提交测试</title>
    <meta charset='utf-8'>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        h1 { color: #0066cc; }
        .form-group { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; }
        input[type='text'], textarea { width: 100%; padding: 8px; box-sizing: border-box; }
        .checkbox-group { margin-bottom: 10px; }
        button { padding: 10px 15px; background-color: #0066cc; color: white; border: none; cursor: pointer; }
        pre { background-color: #f5f5f5; padding: 10px; border-radius: 4px; overflow: auto; }
    </style>
</head>
<body>
    <h1>表单提交测试</h1>
    <p>此页面用于测试表单提交功能，特别是多选框数组的处理</p>
    
    <form action="/diagnostics/form-submit" method="post" enctype="application/x-www-form-urlencoded">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="name">名称：</label>
            <input type="text" id="name" name="name" value="测试角色" required />
        </div>
        <div class="form-group">
            <label for="description">描述：</label>
            <textarea id="description" name="description">测试角色描述</textarea>
        </div>
        <div class="form-group">
            <label>权限：</label>
            <div class="checkbox-group">
                <input type="checkbox" id="perm1" name="permissions" value="ViewUsers" />
                <label for="perm1">查看用户</label>
            </div>
            <div class="checkbox-group">
                <input type="checkbox" id="perm2" name="permissions" value="ManageUsers" />
                <label for="perm2">管理用户</label>
            </div>
            <div class="checkbox-group">
                <input type="checkbox" id="perm3" name="permissions" value="ViewAllTables" />
                <label for="perm3">查看所有表</label>
            </div>
            <div class="checkbox-group">
                <input type="checkbox" id="perm4" name="permissions" value="ExportData" />
                <label for="perm4">导出数据</label>
            </div>
        </div>
        <button type="submit">提交表单</button>
    </form>
</body>
</html> 